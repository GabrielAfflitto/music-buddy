<div class="song">
  <div class="w3-container w3-content w3-center w3-padding-64" style="max-width:350px" id="band">
    <div class="lyrics"><h4>
      <% @song.lyrics.each do |bar| %></h4>
        <%= bar %>
        <br>
      <% end %>
    </div>
    <br>
    <div class="copyright"><h5> <%= @song.copyright %></h5></div>
    <div class="url"><h5> <%= link_to "View full lyrics", @song.lyrics_url %></h5></div>
  </div>
</div>
