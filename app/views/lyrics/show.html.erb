<div class="song">
  <div class="w3-container w3-content w3-center w3-padding-64" style="max-width:350px" id="band">
    <h1 class="search">Lyrics</h1>
    <br>
    <div class="lyrics"><h4>
      <% @song.lyrics.each do |bar| %></h4>
        <%= bar %>
        <br>
      <% end %>
    </div>
    <br>
    <div class="copyright"><h5> <%= @song.copyright %></h5></div>
    <%= link_to "Artist Info", artist_path(artist: params[:artist]) %>
      <p>(courtesy of wikipedia)</p>
    <% if current_user %>
      <h4><%= link_to "Favorite", user_favorites_path(user_id: current_user.id, track_id: params[:track], lyrics: @song.lyrics, artist: params[:artist], track_name: params[:track_name]), method: :post %></center></h4>
    <% end %>
    <div class="url"><h5> <%= link_to "View full lyrics", @song.lyrics_url %></h5></div>
  </div>
</div>
